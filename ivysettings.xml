<?xml version="1.0" encoding="UTF-8"?>
<ivysettings>
	<settings defaultResolver="chained" />

	<resolvers>
		<chain name="chained" returnFirst="true">
			<url name="github" m2compatible="true" checksums="">
				<artifact pattern="https://github.com/[organisation]/[module]/raw/master/repo/[revision]/[artifact]-[revision].[ext]" />
				<ivy pattern="https://github.com/[organisation]/[module]/raw/master/repo/[revision]/[artifact]-[revision].[ext]" />
			</url>
		</chain>

		<filesystem name="local" m2compatible="true" force="false" local="true">
			<artifact pattern="${basedir}/repo/[revision]/[artifact]-[revision].[ext]" />
			<ivy pattern="${basedir}/repo/[revision]/[artifact]-[revision].[ext]" />
		</filesystem>
	</resolvers>
</ivysettings>